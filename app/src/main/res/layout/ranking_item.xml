<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="org.gsm.software.gsmranking.viewmodel.MainViewModel" />

        <variable
            name="ritem"
            type="org.gsm.software.gsmranking.RankingResultQuery.Ranking" />
    </data>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/white"
            android:layout_width="340dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="15dp"
            android:shadowColor="#6A6868"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:background="@drawable/ranking_background"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_img"
                    setProfile="@{ritem.avatar_url}"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:padding="5dp"
                    tools:src="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/profile_img"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    tools:text="1등" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ranking"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="2dp"
                    setName="@{ritem.name}"
                    setGeneration="@{ritem.generation}"
                    android:layout_toRightOf="@+id/profile_img"
                    android:textColor="@color/black"
                    tools:text="오병진" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/profile_img"
                    contributions="@{ritem.contributions}"
                    android:textColor="@color/black"
                    tools:text="commit : 100" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>